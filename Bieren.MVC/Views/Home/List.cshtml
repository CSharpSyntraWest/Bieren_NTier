@model PagedResult<Bier>
@{
    ViewData["Title"] = "Home Page";
}

<h2>Bieren pagineren</h2>
<div class="row">
    <div class="col-md-5">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>BierNr</th>
                    <th>Naam</th>
                    <th>Alcohol</th>
                </tr>
            </thead>
            <tbody>
                @{ var i = 1; }
                @foreach (var bier in Model.Results)
                {
                    var rowNo = (Model.CurrentPage - 1) * Model.PageSize + i;
                    i++;
                    <tr>
                        <td>@rowNo</td>
                        <td>@bier.BierNr</td>
                        <td>@bier.Naam</td>
                        <td>@bier.Alcohol</td>
                    </tr>
                }
            </tbody>
        </table>

        @(await Component.InvokeAsync<PagerViewComponent>(Model))
    </div>
</div>